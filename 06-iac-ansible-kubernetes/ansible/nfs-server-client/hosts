# Hosts file that tell Ansible how to communicate with the Kubernetes master and worker nodes
[nfs-server]
nfs-server ansible_host=10.2.20.207 ansible_user=vagrant

[nfs-clients]
nfs-client1 ansible_host=10.2.20.208 ansible_user=vagrant
nfs-client2 ansible_host=10.2.20.209 ansible_user=vagrant
nfs-client3 ansible_host=10.2.20.210 ansible_user=vagrant